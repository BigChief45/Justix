.page-header
    %h1
        %i.fa.fa-lock
        Panel de Administracion
        
.main-content
    .row
        .col-md-2
            // NAVIGATION
            %ul.nav.nav-pills.nav-stacked
                %li.active 
                    %a{ "aria-expanded" => "true", href: "#usuarios", "data-toggle" => "pill" }
                        %span.fa.fa-users
                        Usuarios
                %li 
                    %a{ "aria-expanded" => "true", href: "#bufetes", "data-toggle" => "pill" }
                        %span.fa.fa-briefcase
                        Bufetes
    
        .col-md-10
            .widget
                %div{ id: 'myTabContent', class: 'tab-content' }
                    %div{ class: "tab-pane fade active in", id: "usuarios" }
                        / USUARIOS
                        = render 'usuarios'
                    %div{ class: "tab-pane fade", id: "bufetes" }
                        / BUFETES
                        = render 'bufetes'