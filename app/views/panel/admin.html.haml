.page-header
    %h1
        %i.fa.fa-lock
        Panel de Administracion
        
.main-content
    .row
        // USERS
        .col-md-12
            .widget
                %h3.section-title.first-title
                    %i.fa.fa-user
                    Usuarios
                    
                .widget-content-white.glossed
                    .padded
                        
                        %table.table.table-striped.table-hover
                            %thead
                                %tr
                                    %th E-Mail
                                    %th Nombre Completo
                                    %th Plan
                            %tbody
                                - @users.each do |user|
                                    %tr
                                        %td= user.email
                                        %td= user.nombre_completo
                                        %td
                                            %span.label.label-info= user.plan
    .row                  
        // BUFETES
        .col-md-12
            .widget
                %h3.section-title.first-title
                    %i.fa.fa-briefcase
                    Bufetes
                    
                .widget-content-white.glossed
                    .padded
                        
                        %table.table.table-striped.table-hover
                            %thead
                                %tr
                                    %th Nombre
                                    %th Telefono
                                    %th
                            %tbody
                                - @bufetes.each do |bufete|
                                    %tr
                                        %td= link_to bufete.nombre, bufete
                                        %td= bufete.telefono
                                        %td
                                            .btn-group.btn-group-xs
                                                = link_to bufete_casos_path(bufete), class: 'btn btn-default', "data-toggle"=> "tooltip", "data-placement" => "top", :title => "Casos" do
                                                    %i.fa.fa-book
                                                    
                                                = link_to bufete_personas_path(bufete), class: 'btn btn-default', "data-toggle"=> "tooltip", "data-placement" => "top", :title => "Personas" do
                                                    %i.fa.fa-users
                                                
    .row                  
        // COUPONS
        .col-md-12
            .widget
                %h3.section-title.first-title
                    %i.fa.fa-briefcase
                    Coupons
                    
                .widget-content-white.glossed
                    .padded
                        
                        %table.table.table-striped.table-hover
                            %thead
                                %tr
                                    %th Token
                                    %th Plan
                                    %th User
                                    %th Issuer
                            %tbody