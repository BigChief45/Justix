%html
%head
    %title Mi Bufete
    
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    
    /= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css"
    /= stylesheet_link_tag 'https://bootswatch.com/lumen/bootstrap.min.css'
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Oswald:300,400,700', type: 'text/css'
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js'
    
    = csrf_meta_tags
    
%body
    .all-wrapper.no-menu-wrapper
        .login-logo-w
            = link_to root_path, class: 'logo' do
                %i.fa.fa-balance-scale
                %span= "#{APP_NAME}"
  
        .row
            .col-md-4.col-md-offset-4
                .content-wrapper.bold-shadow
                    .content-inner
                        .main-content.main-content-grey-gradient.no-page-header
                            .main-content-inner
                                = yield