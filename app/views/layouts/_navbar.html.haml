.row
    .col-md-12
        %nav.navbar.navbar-default{role: "navigation"}
            / Brand and toggle get grouped for better mobile display
            .navbar-header
                %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", type: "button"}
                    %span.sr-only Toggle navigation
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                %strong
                    = link_to "Mi Bufete", root_path, class: 'navbar-brand'
            
            / Collect the nav links, forms, and other content for toggling
            .collapse.navbar-collapse.navbar-ex1-collapse
                %ul.nav.navbar-nav
                    - if user_signed_in?
                        %li
                            = link_to (current_user.bufetes.any? ? current_user.bufetes.first : crear_bufete_path) do
                                %span.glyphicon.glyphicon-briefcase
                                Mi Bufete
                                
                        %li
                            = link_to (current_user.bufetes.any? ? bufete_casos_path(current_user.bufetes.first) : crear_bufete_path) do
                                %span.glyphicon.glyphicon-book
                                Casos
                                
                        %li
                            = link_to (current_user.bufetes.any? ? bufete_personas_path(current_user.bufetes.first) : crear_bufete_path) do
                                %span.glyphicon.glyphicon-user
                                Personas
                    
              
                %ul.nav.navbar-nav.navbar-right
                    - if user_signed_in?
                        %li.dropdown
                            %a{ :class => 'dropdown-toggle', "data-toggle" => 'dropdown', :role => 'button', "aria-expanded" => false }
                                %strong= current_user.email 
                                %span.caret
                            %ul{:class => 'dropdown-menu', :role => 'menu' }
                                %li
                                    = link_to edit_user_registration_path do
                                        %span.glyphicon.glyphicon-cog
                                        Mi Perfil
                                        
                                %li.divider
                                
                                %li
                                    = link_to logout_path, method: :delete do
                                        %span.glyphicon.glyphicon-log-out
                                        Salir
                    - else
                        %li
                            = link_to "Registrarse", registro_path
                    
                        %li
                            = link_to "Login", login_path
              
            / /.navbar-collapse
