= form_for [@bufete, @caso, @prueba] do |f|

    // ERROR MESSAGES
    = render "shared/error_messages", model: @prueba

    .row
        .col-md-12
            .alert.alert-warning
                %p.text-center 
                    %i.fa.fa-exclamation-circle
                    %strong Formatos permitidos: 
                    %em .jpg .jpeg .png .pdf .doc .txt

    .row
        .col-md-5
            .form-group
                = f.label :titulo
                = f.text_field :titulo, autofocus: true, class: 'form-control'
                
            .form-group
                = f.label :descripcion, 'Breve Descripcion'
                = f.text_field :descripcion, class: 'form-control'
    
        .col-md-7
            .form-group
                = f.label :fecha
                = f.datetime_select :fecha
        
            .form-group
                = f.label :archivo
                = f.file_field :archivo, multiple: false, class: 'btn-file'
            
                
    = f.submit ( f.object.new_record? ? "Agregar Prueba" : "Guardar Cambios"), class: 'btn btn-success', data: { disable_with: "Procesando..." }
    = link_to 'Cancelar', :back, class: 'btn btn-default'