= form_for @bufete do |f|
    
    .row
        .col-md-6
            .form-group
                = f.label :nombre, 'Nombre'
                = f.text_field :nombre, autofocus: true, class: 'form-control'
        
        .col-md-6
            .form-group
                = f.label :telefono, 'Telefono'
                = f.text_field :telefono, class: 'form-control'    
    
    .row
        .col-md-12
            .form-group
                = f.label :direccion, 'Direccion'
                = f.text_field :direccion, class: 'form-control'
        
            .form-group
                = f.label :descripcion, 'Descripcion'
                = f.text_area :descripcion, rows: '7', class: 'form-control'
                
            .form-group
                = f.submit ( f.object.new_record? ? "Crear Bufete" : "Guardar Cambios"), class: 'btn btn-default'