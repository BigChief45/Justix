.panel.panel-default
    .panel-body
        %h2
            = @bufete.nombre
            .pull-right
                .btn-group.btn-group-sm.pull-right
                    - if can? :update, @bufete
                        = link_to edit_bufete_path(@bufete), class: "btn btn-default" do
                            %span.glyphicon.glyphicon-pencil
                            Editar
                    - if can? :destroy, @bufete    
                        = link_to bufete_path(@bufete), method: :delete, class: "btn btn-default btn-danger" do
                            %span.glyphicon.glyphicon-remove
                            Eliminar
        
        %p
            %span.glyphicon.glyphicon-map-marker
            = @bufete.direccion + ", " + "Tel: " + @bufete.telefono
            
        =simple_format h @bufete.descripcion