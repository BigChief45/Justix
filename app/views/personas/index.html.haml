.page-header
    .header-links.hidden-xs
        - if can? :create, Persona
            = link_to new_bufete_persona_path(@bufete) do
                %span.glyphicon.glyphicon-plus
                Crear Persona
    %h1
        %i.fa.fa-users
        Personas
        
.main-content
    .widget
        .widget-content-white.glossed
            
                
            %table.table.table-striped.table-hover
                %thead
                    %tr
                        %th.text-center Nombre Completo
                        %th.text-center Identidad
                        %th.text-center Telefono
                        %th.text-center Domicilio
                        %th.text-center Tipo
                        %th.text-center Ver
                %tbody
                    - @personas.each do |p|
                        %tr.text-center
                            %td= p.nombre_completo
                            %td= p.num_registro
                            %td= p.telefono
                            %td= p.domicilio
                            %td= p.type
                            %td
                                = link_to bufete_persona_path(@bufete, p), class: 'btn btn-default btn-xs' do
                                    %span.glyphicon.glyphicon-search