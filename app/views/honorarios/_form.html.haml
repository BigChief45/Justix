= form_for [@bufete, @caso, @honorario] do |f|

    // ERROR MESSAGES
    = render "shared/error_messages", model: @honorario
    
    .form-group
        = f.label :fecha
        = f.datetime_select :fecha

    .form-group
        = f.label :abono
        = f.text_field :abono, autofocus: true, class: 'form-control'
            
                
    = f.submit ( f.object.new_record? ? "Registrar Honorario" : "Guardar Cambios"), class: 'btn btn-success'
    = link_to 'Cancelar', :back, class: 'btn btn-default'