.page-header
    %h1
        %i.fa.fa-cog
        Mi Cuenta

.main-content
    .widget
        .widget-content-white.glossed
            .padded
                %h3.form-title.form-title-first
                    %i.fa.fa-pencil
                    Editar Mi Cuenta

                = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart:true }) do |f|
                    
                    = devise_error_messages!
                    
                    .row
                        .col-md-6
                            .form-group
                                = f.label :name, 'Nombre'
                                = f.text_field :name, class: 'form-control'
                            
                            .form-group
                                = f.label :last_name, 'Apellido'
                                = f.text_field :last_name, class: 'form-control'
                            
                            .form-group
                                = f.label :email
                                = f.email_field :email, class: 'form-control'
                                
                                - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                                    %div
                                        Esperando confirmacion para:
                                        = resource.unconfirmed_email
                        
                        .col-md-6
                            .form-group
                                = f.label 'Contrase単a' 
                                %i (Dejala en blanco si no quieres cambiarla)
                                %br
                                = f.password_field :password, autocomplete: "off", class: 'form-control'
                    
                            .form-group
                                = f.label 'Confirmar contrase単a'
                                %i (Dejala en blanco si no quieres cambiarla)
                                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
                                
                            .form-group
                                = f.label :avatar, 'Foto'
                                = f.file_field :avatar
            
                    %hr
            
                    .row
                        .col-md-6.col-md-offset-3
            
                            .form-group
                                = f.label 'Contrase単a actual'
                                %i (Ingresa tu contrase単a actual para confirmar los cambios)
                                %br
                                = f.password_field :current_password, autocomplete: "off", class: 'form-control'
                    
                    
                            .form-group.text-center
                                = f.submit "Guardar Cambios", class: 'btn btn-success'
            
            
                %hr
            
                .panel.panel-danger
                    .panel-heading
                        %h1.panel-title Eliminar Mi Cuenta
                    .panel-body
                        %p 
                            Presiona el boton abajo si quiere eliminar tu cuenta.
                            %b Esta accion es irreversible.
                            
                            .form-group.text-center
                                = button_to "Eliminar Mi Cuenta", registration_path(resource_name), data: { confirm: "Estas seguro? Esta accion es irreversible. Tu cuenta sera eliminada permanentemente del sistema y toda tu informacion relacionada a tu bufete sera eliminada." }, method: :delete, class: 'btn btn-danger'
