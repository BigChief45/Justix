.page-header
    %h1
        %i.fa.fa-cog
        Configuración

.main-content
    .widget
        .widget-content-white.glossed
            .padded
                %h3.form-title.form-title-first
                    %i.fa.fa-pencil
                    Editar Mi Cuenta
                    
                    .pull-right
                        = render 'devise/registrations/planes/icons'

                = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart:true }) do |f|
                    
                    = devise_error_messages!
                    
                    .row
                        .col-md-6
                            .form-group
                                = f.label :nombre, 'Nombre'
                                = f.text_field :nombre, class: 'form-control'
                            
                            .form-group
                                = f.label :apellido, 'Apellido'
                                = f.text_field :apellido, class: 'form-control'
                            
                            .form-group
                                = f.label :email
                                = f.email_field :email, class: 'form-control'
                                
                                - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                                    %div
                                        Esperando confirmacion para:
                                        = resource.unconfirmed_email
                        
                        .col-md-6
                            .form-group
                                = f.label 'Nueva Contraseña' 
                                %i (Dejala en blanco si no quieres cambiarla)
                                %br
                                = f.password_field :password, autocomplete: "off", class: 'form-control'
                    
                            .form-group
                                = f.label 'Confirmar contraseña'
                                %i (Dejala en blanco si no quieres cambiarla)
                                = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'

                    %hr
            
                    .row
                        .col-md-12
            
                            .form-group
                                = f.label 'Contraseña actual'
                                %i (Ingresa tu contraseña actual para confirmar los cambios)
                                %br
                                = f.password_field :current_password, autocomplete: "off", class: 'form-control'
                    
                    
                            .form-group.text-center
                                = f.submit "Guardar Cambios", class: 'btn btn-success'
            
                %hr
            
                .panel.panel-danger
                    .panel-heading
                        %h1.panel-title Eliminar Mi Cuenta
                    .panel-body
                        %p 
                            Presiona el boton abajo si quiere eliminar tu cuenta.
                            %b Esta acción es irreversible.
                            
                            .form-group.text-center
                                = button_to "Eliminar Mi Cuenta", registration_path(resource_name), data: { confirm: "Estás seguro? Esta acción es irreversible. Tu cuenta será eliminada permanentemente del sistema y toda tu información relacionada a tu bufete será eliminada." }, method: :delete, class: 'btn btn-danger'
