= form_for [@bufete, @caso, @record], class: 'form-horizontal' do |f|

    // ERROR MESSAGES
    = render "shared/error_messages", model: @record
    
    .row
        .col-md-6
            %h3.section-title.first-title Cliente
        
            .form-group
                = f.label :visita, 'Fecha de Visita'
                .input-group.date.datetimepicker
                    = f.text_field :visita, class: 'form-control'
                    %span.input-group-addon
                        %span.fa.fa-calendar
                /= f.datetime_select :visita
                    
            .form-group
                = f.label :folio
                = f.text_field :folio, class: 'form-control'
            
            .form-group
                = f.label :instancia
                = f.text_field :instancia, class: 'form-control'
                
            .form-group
                = f.label :actuacion
                = f.text_field :actuacion, class: 'form-control'
                
            .form-group
                = f.label :notificacion_cliente, 'Fecha de Notificacion'
                = f.datetime_select :notificacion_cliente
                
            .form-group
                = f.label :observaciones_cliente, 'Observaciones'
                = f.text_field :observaciones_cliente, class: 'form-control'
        
        .col-md-6
            %h3.section-title.first-title Contraparte
        
            .form-group
                = f.label :notificacion_contraparte, 'Fecha de Notificacion'
                = f.datetime_select :notificacion_contraparte
                
    .form-group    
        = f.submit ( f.object.new_record? ? "Agregar Entrada" : "Guardar Cambios"), class: 'btn btn-success'
        = link_to 'Cancelar', :back, class: 'btn btn-default'