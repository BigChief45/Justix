.page-header
    .header-links.hidden-xs
        - if can? :create, Caso
            = link_to new_bufete_caso_path(@bufete) do
                %i.fa.fa-plus
                Crear Nuevo Caso
    %h1
        %i.fa.fa-book
        Casos

.main-content
    .widget
        
        .row
            .col-md-8.col-md-offset-2
                .list-group
                    - @casos.each do |caso|
                        .caso-item
                            = link_to bufete_caso_path(@bufete, caso), class: "list-group-item" do
                                %h4.list-group-item-heading
                                    %strong= caso.nombre
                                    %span{ class: "label label-#{caso_estado_contextual caso.estado}"}= caso.estado
                                
                                    .pull-right
                                        .small
                                            %ul.list-inline
                                                %li{ "data-toggle"=> "tooltip", "data-placement" => "bottom", :title => "Entradas en Bitacora" }
                                                    %span.fa.fa-file-text-o.fa-lg
                                                    = caso.records.count
                                                    
                                                %li{ "data-toggle"=> "tooltip", "data-placement" => "bottom", :title => "Evidencia" }
                                                    %span.fa.fa-paperclip.fa-lg
                                                    = caso.pruebas.count
                                                    
                                                
                                %p.list-group-item-text= caso.descripcion
                            
        / Pagination
        .row.text-center
            = will_paginate @casos, renderer: BootstrapPagination::Rails
            
            
:javascript
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })